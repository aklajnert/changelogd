# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true
charset = utf-8
end_of_line = lf
max_line_length = 89

[*.bat]
indent_style = tab
end_of_line = crlf

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2